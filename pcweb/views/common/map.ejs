<p class="describe f-nowrap showMap" href='#mapDialog' data-lontitude='<%=lontitude%>' data-latitude='<%=latitude%>'>
    <i class="iconfont icon-location"></i>&nbsp;&nbsp;地址：
    <%= addr %>&nbsp;&nbsp; <i class="iconfont icon-map">&nbsp;点击查看</i>
       
</p>
<div class="" tabindex="-1" style='display:none'>
    <div class="modal-dialog modal-lg" role="document" id="mapDialog" style="width:600px;">
        <div class="modal-content" id="rz">
            <div class="modal-header">
                <h4 class="modal-title" id="gridSystemModalLabel">详细地址:
                    <%= addr %>
                </h4>
            </div>
            <div class="content" id="info">
                <div id="container" style="width:600px; height:400px"></div>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript" src="http://webapi.amap.com/maps?v=1.4.4&key=5ddf97dbb2cbe13c1538ba188f6b8315"></script>
<script type="text/javascript">
    $('.showMap').on('click', function () {
        $(".showMap").colorbox({
            inline: true,
            slideshow: true,
            width: 600,
            height: 490,
            closeButton: false,
            overlayClose: true
        });
        var lontitude = $(this).data('lontitude');
        var latitude = $(this).data('latitude');
        var map = new AMap.Map('container', {
            zoom: 14,
            resizeEnable: true,
            center: [lontitude, latitude]
        });
   
        var marker = new AMap.Marker({  
           content:'<i class="iconfont icon-map-marker" style="font-size:30px;color:red"></i>',
            position:[lontitude, latitude],
            title:'创图科技',
            map: map
        });
    })
</script>