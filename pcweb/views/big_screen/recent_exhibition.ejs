<div class="swiper-container recomment-data-group" id="exhibitionSwiper">
    <div class="swiper-wrapper">
        <% if(exhibitionList.length > 0){ %>
        <% exhibitionList.forEach(function (group) { %>
        <div class="swiper-slide recomment-data-container">
            <div class="row">
                <% group.forEach(function(item){%>
                <div class="col-4">
                    <div class="slide-item">
                        <div class="title">
                            <%=item.name.substring(0,10) %>
                        </div>
                        <img src="<%= item.pic%>" alt="图片">
                    </div>
                </div>
                <% })%>
            </div>
        </div>
        <%})}%>
    </div>
</div>
<div class="swiper-pagination" id="exhibitionP"></div>
